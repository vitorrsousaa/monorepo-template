{
  "name": "monorepo-template-v2",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:spa": "pnpm --filter spa dev",
    "dev:api": "pnpm --filter api dev",
    "dev:cli": "pnpm --filter cli dev",
    "dev:web": "pnpm --filter web dev",
    "dev:front": "pnpm --filter spa --filter @repo/ui dev",
    "dev:all": "turbo dev",
    "format": "turbo run format --",
    "lint": "turbo run lint --",
    "typecheck": "turbo run typecheck",
    "cosmos": "node apps/cli/dist/index.js",
    "ci:build": "turbo build",
    "ci:lint": "turbo run ci:lint --",
    "ci:format": "turbo run ci:format --",
    "ci:typecheck": "turbo run ci:typecheck",
    "ci:test": "turbo run ci:test --"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "lefthook": "^1.10.8",
    "turbo": "^2.3.3",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "axios": "^1.13.2",
    "zod": "^4.3.5"
  }
}